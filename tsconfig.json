{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@dojo/components/*": ["src/app/shared/components/*"],
      "@dojo/base": ["src/app/shared/base/index.ts"],
      "@dojo/constants": ["src/app/shared/constants/index.ts"],
      "@dojo/models/*": ["src/app/shared/models/*"],
      "@dojo/services": ["src/app/shared/services/index.ts"],
      "@dojo/validators/*": ["src/app/shared/validators/*"],
      "@dojo/state/*": ["src/app/shared/store/*"],
      "@dojo/guards/*": ["src/app/shared/guards/*"],
      "@dojo/environment/*": ["src/environments/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": false,
    "strictInjectionParameters": true
  }
}
